<% if flash[:alert] %>
  <p style="color: red"><%= flash[:alert] %></p>
<% end %>

<% if flash[:notice] %>
  <p style="color: green"><%= flash[:notice] %></p>
<% end %>

<h1>Editing trimester</h1>

<%= form_with(model: @trimester, local: true) do |form| %>
  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.text_field :year, placeholder: "Enter any year" %>
  </div>

  <div>
    <%= form.label :term, style: "display: block" %>
    <%= form.select :term, ["Spring", "Summer", "Fall"], prompt: "Select a term" %>
  </div>

  <div>
    <%= form.label :application_deadline, style: "display: block" %>
    <%= form.date_field :application_deadline %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>


<% end %>


<br>

<div>
  <%= link_to "Back to trimesters", trimesters_path %>
</div>